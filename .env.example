# Environment Configuration
ENVIRONMENT=development

# API Configuration
API_KEY=your-api-key-here
API_BASE_URL=http://localhost:8000

# Security (JWT Authentication)
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_HOURS=24

# Database
# Development: sqlite+aiosqlite:///./test_support.db
# Production: postgresql+asyncpg://user:pass@host:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./test_support.db

# Quimbi Backend Integration (REQUIRED)
QUIMBI_BASE_URL=https://ecommerce-backend-staging-a14c.up.railway.app
QUIMBI_API_KEY=your-quimbi-api-key-here
QUIMBI_TIMEOUT=30.0
QUIMBI_MAX_RETRIES=3

# Quimbi Caching Configuration
QUIMBI_CACHE_INTELLIGENCE_TTL=900
QUIMBI_CACHE_CHURN_TTL=3600
QUIMBI_CACHE_LTV_TTL=3600

# Redis Cache (optional for testing, required for production)
REDIS_URL=redis://localhost:6379/0

# CORS (Frontend URLs - comma separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Scoring Service Configuration
SCORING_RECALCULATION_INTERVAL=300
SCORING_CHURN_WEIGHT=3.0
SCORING_VALUE_WEIGHT=2.0
SCORING_URGENCY_WEIGHT=1.5
TOPIC_ALERT_BOOST=5.0

# Draft Generation
DRAFT_CACHE_TTL=3600
DRAFT_LLM_PROVIDER=anthropic
DRAFT_MODEL=claude-3-5-sonnet-20241022

# Context Gathering
CONTEXT_MAX_PAST_TICKETS=5
CONTEXT_MAX_RECENT_ORDERS=3

# Gorgias Integration (REQUIRED for production)
# Get these from your Gorgias account settings
GORGIAS_DOMAIN=your-gorgias-subdomain
GORGIAS_API_KEY=your-gorgias-api-key
GORGIAS_USERNAME=your-gorgias-email@domain.com
# Generate webhook secret with: openssl rand -hex 32
GORGIAS_WEBHOOK_SECRET=your-webhook-secret-here

# Shopify Integration (REQUIRED for fulfillment tracking)
# Get these from your Shopify Admin API settings
SHOPIFY_SHOP_NAME=your-shop-name
SHOPIFY_ACCESS_TOKEN=shpat_your_access_token_here
SHOPIFY_API_VERSION=2024-10

# Optional: Monitoring & Error Tracking
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# LOG_LEVEL=INFO
